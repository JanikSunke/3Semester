<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  function getView(id) {
    window.open('/invoice/' + id + '/{{ user.id }}', '_blank');
  };
</script>

<div class="text-center">
  <h1>{{title}} page</h1><br>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="card col-10">
      <h1>Profile</h1>
      <p>User id: {{ viewedUser.id }}</p>
      <p>Username: {{ viewedUser.username }}</p>
      <p>Email: {{ viewedUser.email }}</p>
      <br>

      <h1>Subscription: {{ viewedUser.subscription.effectiveTier }}</h1>
      <h2>Active subscriptions</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">NAME</th>
              <th scope="col">REFERENCE</th>
              <th scope="col">PRICE</th>
              <th scope="col">RENEW</th>
              <th scope="col">STATUS</th>
            </tr>
          </thead>
          <tbody>
            {{#each viewedUser.subscription.subscriptions}}
              <tr>
                <td>{{ name }}</td>
                <td>{{ id }}</td>
                <td>{{ price }}{{ currency }}</td>
                <td>{{ renewsAt }}</td>
                <td>{{ status }}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">DATE</th>
              <th scope="col">PRICE</th>
              <th scope="col">NAME</th>
              <th scope="col">EMAIL</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            {{#each viewedUser.invoices}}
              <tr>
                <td>{{ date }}</td>
                <td>{{ totalPrice }}</td>
                <td>{{ name }}</td>
                <td>{{ email }}</td>
                <td onclick="getView('{{ id }}')">VIEW</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>